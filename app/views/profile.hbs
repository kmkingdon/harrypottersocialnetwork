<div id="profile-container">
    <img class="avatar" src="../assets/avatar.jpg" onerror="displayAvatar()" alt="avatar">
    <div class="details">
      <div class="name">
      </div>
      <div class="info">
        <img src="../assets/info.png" alt="name">
      </div>
      <div class="wand">
        <img src="../assets/wand.png" alt="name">
      </div>
    </div>
    <div class="house-points">
      <h1>House Points:</h1>
      <div>
        <img src="../assets/houses/Gryffindor.png" alt="avatar">
        <h2 id="g-points">100</h2>
        <img src="../assets/houses/Slytherin.png" alt="avatar">
        <h2 id="s-points">90</h2>
        <img src="../assets/houses/Hufflepuff.png" alt="avatar">
        <h2 id="h-points">70</h2>
        <img src="../assets/houses/Ravenclaw.png" alt="avatar">
        <h2 id="r-points">89</h2>
      </div>
    </div>
    <div class="images">
      <h1 class="house-title" >House:</h1>
      <img id="house" src="#" alt="house">
      <h1 class="patronus-title">Patronus:</h1>
      <img id="patronus" src="#" alt="patronus">
    </div>
    <div class="wall">
      <div id="posts">
      </div>
    </div>
    <div class="comment">
      <form id="comment"action="#" method="post" >
        <label for="comment">Leave a Comment:</label>
        <input type="text" name="name" placeholder="What is your name?">
        <textarea maxlength="60" name="comment"></textarea>
        <input id="submit" type="submit" name="" value="Submit Comment">
      </form>
    </div>
  </div>



<script type="text/javascript" src="./js/profile.js"></script>
